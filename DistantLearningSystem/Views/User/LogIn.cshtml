@{
    ViewBag.Title = "Вход";
    Layout = "~/Views/Shared/Dashboard_Layout.cshtml";
}
@HtmlManager.ProccessResultContainer(ViewBag.Result)

<div class="container" style="margin-top:20px;width:100%" id="form">

    <div id="info" style="display: none" class="alert alert-danger">
        <span id="information"></span>
    </div>
    @using (Html.BeginForm("ManageLogIn", "User", FormMethod.Post, new { @id = "main_form", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true)

            <div class="form-group">
                <label class="control-label col-md-2" for="Name">Логин или Email</label>
                <div class="col-md-2">
                    <input class="form-control" id="LoginOrEmail" name="LoginOrEmail" type="text" placeholder="Логин" required="required">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="Password">Пароль</label>
                <div class="col-md-2">
                    <input class="form-control" id="Password" name="Password" type="text" placeholder="Пароль" required="required">
                </div>
            </div>

            <div class="form-group" style="margin-top:20px">
                <label class="control-label col-md-2">Кто Вы?</label>
                <div class="col-md-2">
                    <select class="form-control" name="WhoAreU">
                        <option>
                            Студент
                        </option>
                        <option>
                            Преподаватель
                        </option>
                    </select>

                </div>
            </div>
            <input type="submit" value="Войти"/>
        </div>
    }
</div>

@model DistantLearningSystem.Models.DataModels.Student
@{
    ViewBag.Title = "RegistrateStudent";
    Layout = "~/Views/Shared/Dashboard_Layout.cshtml";
}
<div class="breadcrumbs flat">
    @HtmlManager.BreadCrumbs(Html, "Регистрация", "Registration", "User")
</div>
@section Scripts{
    <script>

        function submitForm() {
            console.log('enter submit form!');
            var Name = $("#Name");
            var LastName = $("#LastName");
            var Mail = $("#Email");
            var PassWord = $("#Password");
            var ConfirmPassword = $("#ConfirmPassword");
            var imageUpload = $("#imageUpload");

            console.log(Name.val());
            if (Name.val() == "" ||
                Mail.val() == "" ||
                PassWord.val() == "" ||
                ConfirmPassword.val() == "") {
                document.getElementById("information").innerHTML = 'Заполнены не все поля';
                $("#info").show();
            }

            console.log(PassWord.val());
            console.log(ConfirmPassword.val());

            if (ConfirmPassword.val() != PassWord.val()) {
                document.getElementById("information").innerHTML = 'Пароли не совпадают';
                $("#info").show();
            }
            else {
                $("#main_form").submit();
            }
        }
    </script>
}
<div class="container" style="margin-top:20px">
    <div id="info" style="display: none" class="alert alert-danger">
        <span id="information"></span>
    </div>
    @using (Html.BeginForm("ManageStudentRegistration", "User", FormMethod.Post, new { @id = "main_form", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true)

            <div class="form-group">
                <label class="control-label col-md-2" for="Name">Имя</label>
                <div class="col-md-2">
                    <input class="form-control" id="Name" name="Name" type="text" placeholder="Имя" required="required">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="LastName">Фамилия</label>
                <div class="col-md-2">
                    <input class="form-control" id="LastName" name="LastName" type="text" placeholder="Фамилия" required="required">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="Login">Логин</label>
                <div class="col-md-2">
                    <input class="form-control" id="Login" name="Login" type="text" placeholder="Логин" required="required">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="Email">Email</label>
                <div class="col-md-2">
                    <input class="form-control" id="Email" name="Email" type="text" placeholder="Email" required="required">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="Password">Пароль</label>
                <div class="col-md-2">
                    <input class="form-control" id="Password" name="Password" type="text" placeholder="Пароль" required="required">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="ConfirmPassword">Подтвердите пароль</label>
                <div class="col-md-2">
                    <input class="form-control" id="ConfirmPassword" name="ConfirmPassword" type="text" placeholder="Подтвердите пароль" required="required">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Изображение</label>
                <div class="col-md-2">
                    @HtmlManager.ImageUpload()
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    @HtmlManager.DefaultButton("submitForm()")
                    @HtmlManager.BackButton(Html.ActionLink("Назад", "Registration", "User"))
                </div>
            </div>
        </div>
    }
</div>
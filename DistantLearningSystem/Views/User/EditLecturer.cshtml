@model DistantLearningSystem.Models.DataModels.Lecturer

@{
    ViewBag.Title = "Редактирование";
    Layout = "~/Views/Shared/Dashboard_Layout.cshtml";
}
<div class="container" style="margin-top:20px; width:100%" id="form">

    <div id="info" style="display: none" class="alert alert-danger">
        <span id="information"></span>
    </div>

    @using (Html.BeginForm("ManageLecturerEditing", "User", FormMethod.Post, new { @id = "main_form", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true)
            <input type="hidden" id="Id" name="Id" placeholder="Имя" value="@Model.Id" required="required">
            <div class="form-group">
                <label class="control-label col-md-2" for="Name">Имя</label>
                <div class="col-md-2">
                    <input class="form-control" id="Name" name="Name" type="text" placeholder="Имя" value="@Model.Name" required="required">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="LastName">Фамилия</label>
                <div class="col-md-2">
                    <input class="form-control" id="LastName" name="LastName" type="text" placeholder="Фамилия" value="@Model.LastName" required="required">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="Login">Логин</label>
                <div class="col-md-2">
                    <input class="form-control" id="Login" name="Login" type="text" placeholder="Логин" value="@Model.Login" required="required">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="Login">Email</label>
                <div class="col-md-2">
                    <input class="form-control" id="Email" name="Email" type="text" placeholder="Email" value="@Model.Email" required="required">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="Password">Пароль</label>
                <div class="col-md-2">
                    <input class="form-control" id="Password" name="Password" type="text" placeholder="Пароль" value="">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="ConfirmPassword">Подтвердите пароль</label>
                <div class="col-md-2">
                    <input class="form-control" id="ConfirmPassword" name="ConfirmPassword" type="text" value="" placeholder="Подтвердите пароль">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Изображение</label>
                <div class="col-md-2">
                    @HtmlManager.ImageUpload(Model.ImgSrc)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    @HtmlManager.SubmitButton()
                </div>
            </div>
        </div>
    }
</div>

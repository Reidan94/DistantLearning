<div class="container" style="margin-top:20px; width:100%" id="form">

    <div id="info" style="display: none" class="alert alert-danger">
        <span id="information"></span>
    </div>
    @using (Html.BeginForm("ManageGroupAdding", "User", new { lecturerId = ViewBag.UserId }, FormMethod.Post, new { @id = "main_form", enctype = "multipart/form-data" }))
    {
        <div class="form-group">
            <div class="col-md-10">
                @HtmlManager.DropDownList(Html, "Группа", "groupId", ViewBag.Groups)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @HtmlManager.SubmitButton()
            </div>
        </div>
    }
</div>
